<style>

	a{
		color:#666;
	}

	.edit_btn{
		background-color:#5cb85c;
		color:#666;
	}

	.edit_btn:hover{
		background-color:#449d44;
		color:white;
	}

	.destroy_btn{
		background-color:#d9534f;
		color:#666;
	}

	.destroy_btn:hover{
		background-color:#c9302c;
		color:white;
	}

</style>

<div class = "container" style = "padding-top:10px; padding-bottom:400px;">

	<% if flash[:notice] %>

        <div class="flash">

            <%= flash[:notice] %>

        </div>

	<% end %>

	<div class = "row">

		<div class = "col-xs-3">

      		<%= render 'users/user_show', user: @user %>
      		<%= render 'books/book_new', book: @book_new %>

		</div>

		<div class = "col-xs-9">

			<section>

				<h2>Book detail</h2>

				<table style = "width:100%;">
					<thead>
						<tr style = "border-bottom:1px solid #ddd;">
							<th></th>
							<th></th>
							<th></th>
							<th></th>
							<th></th>
							<% if current_user == @book.user %>
							<th></th>
							<th></th>
							<% end %>
						</tr>
					</thead>
					<tbody>
						<tr>

							<td style = "padding:8px;">
								<%= link_to user_path(@book.user.id) do %>
									<%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', size: "40x40",
										fallback: "/no_image.jpg" %><br>
								<%= @book.user.name %>
								<% end %>
							</td>

							<td style = "padding:8px; vertical-align: top;"><%= link_to @book.title, book_path(@book.id),
								:style => 'color:#666;' %>
							</td>

							<td style = "padding:8px; vertical-align: top;"><%= @book.body %></td>

							<td style = "padding:8px; vertical-align: top;">
								<% if @book.favorited_by?(current_user) %>
									<%= link_to book_favorites_path(@book), method: :delete do %>
										<span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
										<%= @book.favorites.count %>
									<% end %>
								<% else %>
									<%= link_to book_favorites_path(@book), method: :post do %>
										<span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
										<%= @book.favorites.count %>
									<% end %>
								<% end %>
							</td>

							<td style = "padding:8px; vertical-align: top;">
								<a href="#comments">
									コメント数：<%= @book.book_comments.count %>
								</a>
							</td>

							<% if @book.user == current_user %>
							<td style = "vertical-align: top; padding:8px;">
								<%= link_to "Edit", edit_book_path(@book.id), :class => "edit_btn",
									:style => 'padding:5px 10px; border-radius:3px;' %>
							</td>

							<td style = "vertical-align: top; padding:8px;">
								<%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？",
									:class => "destroy_btn", :style => 'padding:5px 10px; border-radius:3px;' %>
							</td>
							<% end %>

						</tr>
					</tbody>
				</table>

				<table style = "margin-top:20px;">
					<thead>
						<tr>
							<th></th>
							<th></th>
							<th></th>
						</tr>
					</thead>
					<% @book.book_comments.each do |book_comment| %>
						<tbody>
							<tr>

								<td>
									<%= link_to user_path(@book.user.id) do %>
									<%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', size: "50x50",
										fallback: "/no_image.jpg" %><br>
									<%= book_comment.user.name %>
									<% end %>
								</td>

								<td>
									<%= book_comment.comment %>
								</td>

								<td>
									<% if current_user == book_comment.user %>
										<%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment),
											method: :delete, "data-confirm" => "本当に消しますか？",
											:class => "destroy_btn", :style => 'padding:5px 10px; border-radius:3px;' %>
									<% end %>
								</td>

							</tr>
						</tbody>
					<% end %>
				</table>

				<%= form_for [@book, @book_comment] do |f| %>
				<div class="row">

				    <div class="col-sm-11">

				      	<%= f.text_area :comment, rows:'5', class: "form-control",
				      		:style => 'display:inline-block;width:550px;' %>

				    	<%= f.submit "送信する", class: "btn btn-base-1 mt-20 pull-bottom" %>

				    </div>

			    </div>
				<% end %>

			</section>

		</div>

	</div>

</div>