<div class = "container" style = "padding-top:10px; padding-bottom:30px;">

	<div class = "row">

		<div class = "col-xs-3">

			<%= render 'users/user_show', user: @user %>
			<%= render 'books/book_new', book: @book_new %>

		</div>

		<div class = "col-xs-9">

			<section>

				<h2>Users</h2>

		      	<table style = "width:100%;">
					<thead>
						<tr style = "border-bottom:2px solid #ddd;">
							<th style = "padding:8px;">image</th>
							<th style = "padding:8px;">name<th>
						</tr>
					</thead>
					<% @users.each do |user| %>
						<tbody>
							<tr style = "border-top:1px solid #ddd;">
								<td style = "padding:8px;">
									<%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "40x40",
										fallback: "/no_image.jpg" %>
								</td>
								<td style = "margin-bottom:2px; padding:8px;">
									<%= user.name %>
								</td>
								<th style = "margin-bottom:2px; padding:8px;">
									<%= link_to 'Show', user_path(user.id) %>
								</th>
							</tr>
						</tbody>
					<% end %>
				</table>

			</section>

		</div>

	</div>

</div>

