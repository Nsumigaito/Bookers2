<div class = "container">

  <div class = "row">

    <div class = "col-md-12">

      <section>

        <h1><%= @title %></h1>

        <h5><%= @text %></h5>

        <% if @follows_table == 0 %>

          <table style = "width:100%;">
            <thead>
              <tr style = "border-bottom:2px solid #ddd;">
                <th style = "padding:8px;">image</th>
                <th style = "padding:8px;">name<th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <% @users.each do |user| %>
              <tbody>
                <tr style = "border-top:1px solid #ddd;">

                  <td style = "padding:8px;">
                    <%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "40x40",
                      fallback: "/no_image.jpg" %>
                  </td>

                  <td style = "margin-bottom:2px; padding:8px;">
                    <%= user.name %>
                  </td>

                  <td>
                    フォロー数：<%= user.relationships.count %>
                  </td>

                  <td>
                    フォロワー数：<%= user.reverse_of_relationships.count %>
                  </td>

                  <td></td>

                  <td style = "margin-bottom:2px; padding:8px;">
                    <%= link_to 'Show', user_path(user.id) %>
                  </td>

                </tr>
              </tbody>
            <% end %>
          </table>

        <% end %>

        <% if @followers_table == 0 %>

          <table style = "width:100%;">
            <thead>
              <tr style = "border-bottom:2px solid #ddd;">
                <th style = "padding:8px;">image</th>
                <th style = "padding:8px;">name<th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <% @users.each do |user| %>
              <tbody>
                <tr style = "border-top:1px solid #ddd;">

                  <td style = "padding:8px;">
                    <%= attachment_image_tag user.user, :profile_image, format: 'jpeg', size: "40x40",
                      fallback: "/no_image.jpg" %>
                  </td>

                  <td style = "margin-bottom:2px; padding:8px;">
                    <%= user.user.name %>
                  </td>

                  <td>
                    フォロー数：<%= user.user.relationships.count %>
                  </td>

                  <td>
                    フォロワー数：<%= user.user.reverse_of_relationships.count %>
                  </td>

                  <td></td>

                  <td style = "margin-bottom:2px; padding:8px;">
                    <%= link_to 'Show', user_path(user.user.id) %>
                  </td>

                </tr>
              </tbody>
            <% end %>
          </table>

        <% end %>

      </section>

    </div>

  </div>

</div>